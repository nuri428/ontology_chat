{
  "dashboard": {
    "id": null,
    "title": "Ontology Chat - Cache Performance",
    "tags": ["ontology", "chat", "cache", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Cache Hit Rate by Level",
        "type": "graph",
        "targets": [
          {
            "expr": "ontology_chat_cache_l1_hit_rate",
            "refId": "A",
            "legendFormat": "L1 Memory Cache"
          },
          {
            "expr": "ontology_chat_cache_l2_hit_rate",
            "refId": "B",
            "legendFormat": "L2 Redis Cache"
          },
          {
            "expr": "ontology_chat_cache_l3_hit_rate",
            "refId": "C",
            "legendFormat": "L3 Disk Cache"
          },
          {
            "expr": "ontology_chat_cache_overall_hit_rate",
            "refId": "D",
            "legendFormat": "Overall Hit Rate"
          }
        ],
        "yAxes": [
          {
            "unit": "percentunit",
            "max": 1,
            "min": 0
          }
        ],
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Cache Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "ontology_chat_cache_l1_memory_usage_bytes",
            "refId": "A",
            "legendFormat": "L1 Memory Usage"
          },
          {
            "expr": "ontology_chat_cache_l1_max_memory_bytes",
            "refId": "B",
            "legendFormat": "L1 Memory Limit"
          },
          {
            "expr": "ontology_chat_cache_l3_disk_usage_bytes",
            "refId": "C",
            "legendFormat": "L3 Disk Usage"
          }
        ],
        "yAxes": [
          {
            "unit": "bytes"
          }
        ],
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Cache Operations Per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ontology_chat_cache_hits_total[5m])",
            "refId": "A",
            "legendFormat": "Cache Hits/sec"
          },
          {
            "expr": "rate(ontology_chat_cache_misses_total[5m])",
            "refId": "B",
            "legendFormat": "Cache Misses/sec"
          },
          {
            "expr": "rate(ontology_chat_cache_sets_total[5m])",
            "refId": "C",
            "legendFormat": "Cache Sets/sec"
          }
        ],
        "yAxes": [
          {
            "unit": "ops"
          }
        ],
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 0,
          "y": 9
        }
      },
      {
        "id": 4,
        "title": "Cache Response Times",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ontology_chat_cache_operation_duration_seconds_bucket{level=\"l1\"}[5m]))",
            "refId": "A",
            "legendFormat": "L1 95th percentile"
          },
          {
            "expr": "histogram_quantile(0.95, rate(ontology_chat_cache_operation_duration_seconds_bucket{level=\"l2\"}[5m]))",
            "refId": "B",
            "legendFormat": "L2 95th percentile"
          },
          {
            "expr": "histogram_quantile(0.95, rate(ontology_chat_cache_operation_duration_seconds_bucket{level=\"l3\"}[5m]))",
            "refId": "C",
            "legendFormat": "L3 95th percentile"
          }
        ],
        "yAxes": [
          {
            "unit": "s"
          }
        ],
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 12,
          "y": 9
        }
      },
      {
        "id": 5,
        "title": "Cache Effectiveness",
        "type": "stat",
        "targets": [
          {
            "expr": "ontology_chat_cache_effectiveness_score",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 0.6
                },
                {
                  "color": "green",
                  "value": 0.8
                }
              ]
            },
            "unit": "short",
            "min": 0,
            "max": 1
          }
        },
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 0,
          "y": 18
        }
      },
      {
        "id": 6,
        "title": "Redis Connection Status",
        "type": "stat",
        "targets": [
          {
            "expr": "redis_up",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            },
            "mappings": [
              {
                "type": "value",
                "value": "1",
                "text": "Connected"
              },
              {
                "type": "value",
                "value": "0",
                "text": "Disconnected"
              }
            ]
          }
        },
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 6,
          "y": 18
        }
      },
      {
        "id": 7,
        "title": "Cache Evictions",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ontology_chat_cache_evictions_total{level=\"l1\"}[5m])",
            "refId": "A",
            "legendFormat": "L1 Evictions/sec"
          },
          {
            "expr": "rate(ontology_chat_cache_evictions_total{level=\"l3\"}[5m])",
            "refId": "B",
            "legendFormat": "L3 Evictions/sec"
          }
        ],
        "yAxes": [
          {
            "unit": "ops"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 18
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "refresh": "30s"
  }
}