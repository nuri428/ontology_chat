# Monitoring Environment Variables

# Grafana 설정
GRAFANA_ADMIN_PASSWORD=ontology_monitoring_2024
GRAFANA_DOMAIN=localhost
GRAFANA_DB_PASSWORD=grafana_secret_2024

# Alertmanager 설정
ALERTMANAGER_DOMAIN=localhost
ALERTMANAGER_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# 외부 서비스 연결 (프로덕션 환경용)
LANGFUSE_DB_HOST=192.168.0.10:5432
LANGFUSE_DB_NAME=langfuse
LANGFUSE_DB_USER=langfuse
LANGFUSE_DB_PASSWORD=langfuse_production_password

# Redis 외부 연결 (프로덕션 환경용)
REDIS_EXTERNAL_URL=redis://192.168.0.10:6379
REDIS_PASSWORD=redis_production_password

# 메트릭 수집 설정
PROMETHEUS_RETENTION_TIME=30d
PROMETHEUS_STORAGE_SIZE=10GB
GRAFANA_STORAGE_SIZE=5GB
ALERTMANAGER_STORAGE_SIZE=1GB

# 알림 설정
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#monitoring
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_FROM=alerts@ontology-chat.com
EMAIL_TO=admin@ontology-chat.com